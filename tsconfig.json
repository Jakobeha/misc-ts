{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "ES2021",
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "*": ["./src/*"]
    },
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./out/types",
    "composite": true,
    "isolatedModules": true
  }
}
